@using WebMovie.ViewModels;
@using WebMovie.ViewModels.Names;
@using WebMovie.Data.Enumerations;
@model CreateNameVM;

@{
	ViewBag.Title = "Add a new person";
	List<Professions> professions = new List<Professions>((Professions[])Enum.GetValues(typeof(Professions)));
}

<div class="row">
	<div class="col-md-4 mx-auto">
		<p><h1>Add a new person</h1></p>
	</div>
	<div class="row">
		<div class="col-md-5 mx-auto">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Name.FullName" class="control-label"></label>
					<input asp-for="Name.FullName" class="form-control" />
					<span asp-validation-for="Name.FullName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Name.Description" class="control-label"></label>
					<input asp-for="Name.Description" class="form-control" />
					<span asp-validation-for="Name.Description" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Name.BirthYear" class="control-label">Start year</label>
					<input asp-for="Name.BirthYear" class="form-control" />
					<span asp-validation-for="Name.BirthYear" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Name.DeathYear" class="control-label">End Year</label>
					<input asp-for="Name.DeathYear" class="form-control" />
					<span asp-validation-for="Name.DeathYear" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Professions" class="control-label">Сhoose a person's professions:</label>
					<select asp-for="Professions" asp-items="@(new SelectList(professions))" class="form-control" multiple">
						<option value="">Not selected</option>
					</select>
					<span asp-validation-for="Professions" class="text-danger"></span>
				</div>

				@* <div class="form-group">
					<label asp-for="Professions" class="control-label">Сhoose a person's professions:</label>
					<select asp-for="Professions" class="form-control" multiple">
						<option value="">Not selected</option>
						@foreach (var name in ViewBag.Names)
						{
							<option value="@name.Id">@name.FullName</option>
						}
					</select>
					<span asp-validation-for="Roles" class="text-danger"></span>
				</div> *@

				@* <div class="form-group">
					<label asp-for="Movie.Country" class="control-label">Country</label>
					<select asp-for="Movie.Country" asp-items="@(new SelectList(countries))" class="form-control">
						<option value="">Select country</option>
					</select>
				</div> *@
				
				<div class="form-group">
					<label asp-for="Name.FaceImageUrl" class="control-label"></label>
					<input asp-for="Name.FaceImageUrl" class="form-control" />
					<span asp-validation-for="Name.FaceImageUrl" class="text-danger"></span>
				</div>


				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-outline-warning" />
					<a class="btn btn-outline-secondary" asp-action="Index">Go back</a>
				</div>
			</form>
		</div>
	</div>
</div>
